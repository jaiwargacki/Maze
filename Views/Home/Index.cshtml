@{
    ViewData["Title"] = "Maze";
}

<body>
    <div id="MazeContainer"></div>

    <table>
        <tr>
            <td><button id="SQUARETYPE:0" class="clicked" onclick="SelectSquareType(TYPES['EMPTY'])">Erase</button></td>
            <td><button id="SQUARETYPE:1" onclick="SelectSquareType(TYPES['WALL'])">Wall</button></td>
            <td><button id="SQUARETYPE:2" onclick="SelectSquareType(TYPES['START'])">Start</button></td>
            <td><button id="SQUARETYPE:3" onclick="SelectSquareType(TYPES['END'])">End</button></td>
        </tr>
        <tr>
            <td colspan="4"><button id="SOLVE" onclick="Solve()">Solve</button></td>
        </tr>
    </table>
</body>